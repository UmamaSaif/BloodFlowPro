                <TableColumn fx:id="locationColumn" prefWidth="187.0" text="Location" />
                <TableColumn fx:id="dateColumn" prefWidth="187.0" text="Date" />
                <TableColumn fx:id="timeColumn" prefWidth="187.0" text="Time" />
            </columns>
